<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">

    <!-- 
        Unidad de persistencia "UnidadMariaDB":
        - Conjunto de configuraciones para JPA/Hibernate.
        - Nombre usado en Java: Persistence.createEntityManagerFactory("UnidadMariaDB");
        - Define proveedor, conexión y propiedades de la base de datos.
    -->

    <!--
        RESOURCE_LOCAL: las transacciones las maneja la aplicación.
        Se debe usar begin(), commit() y rollback manualmente.
        Ideal para apps Java SE sin servidor de aplicaciones.
    -->
    <!-- Definición de la unidad de persistencia -->
    <persistence-unit name="UnidadMariaDB" transaction-type="RESOURCE_LOCAL">
        <!-- Proveedor de JPA que se usará (Hibernate en este caso) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.example.jpa.ejercicio_01.entities.Socio</class>
        <class>com.example.jpa.ejercicio_01.entities.Membresia</class>
        <class>com.example.jpa.ejercicio_01.entities.Entrenador</class>
        <class>com.example.jpa.ejercicio_01.entities.Actividad</class>

        <!-- 
            Properties:
            - Contenedor de configuraciones para Hibernate/JPA
            - Incluye driver, URL, usuario, contraseña, dialecto y otras opciones
        -->
        <properties>
            <!-- Driver JDBC para MariaDB -->
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>

            <!-- URL de conexión a la base de datos: servidor, puerto y nombre de la BD -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/gimnasio_db"/>

            <!-- Usuario y contraseña para acceder a la base de datos -->
            <property name="jakarta.persistence.jdbc.user" value="mariadb"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>

            <!-- Dialecto SQL de Hibernate específico para MariaDB -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>

            <!-- Configuración para manejo automático del esquema de la base de datos -->
            <!-- create: crea tablas desde cero, update: actualiza tablas existentes, validate: solo valida -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Configuraciones de depuración de SQL -->
            <property name="hibernate.show_sql" value="true"/> <!-- Muestra consultas SQL en consola -->
            <property name="hibernate.format_sql" value="true"/> <!-- Formatea las consultas para que sean legibles -->
            <property name="hibernate.highlight_sql" value="true"/> <!-- Resalta la sintaxis SQL en consola -->

            <!-- Tamaño de batch para operaciones JDBC (inserciones, actualizaciones, borrados)-->
            <property name="hibernate.jdbc.batch_size" value="20"/>
        </properties>
    </persistence-unit>
</persistence>
