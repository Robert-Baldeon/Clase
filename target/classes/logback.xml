<configuration>
    <!-- Define un appender para la consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Formato de salida de los logs -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configura los logs del driver de MongoDB -->
    <logger name="org.mongodb.driver" level="WARN"/>
    <!-- Esto significa que solo mostrará WARN y ERROR, no DEBUG ni INFO -->

    <!-- Configuración de logs raíz (default) -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
